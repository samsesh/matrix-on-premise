# Synapse Configuration
SYNAPSE_SERVER_NAME=localhost
SYNAPSE_REPORT_STATS=yes

# System Configuration
TZ=UTC

# User and Group IDs (optional, defaults to 991)
UID=991
GID=991

# TURN Server Configuration
TURN_SERVER=localhost
TURN_SHARED_SECRET=

# Element Web Configuration
MATRIX_THEMES=light,dark

# Element Call Configuration
ELEMENT_CALL_PORT=8082

# LiveKit Configuration (for MatrixRTC backend)
LIVEKIT_KEY=devkey
LIVEKIT_SECRET=secret
# Note: Change these to secure random values in production!
# You can generate a secure secret with: openssl rand -hex 32

# LiveKit Domain Configuration
LIVEKIT_DOMAIN=localhost
LIVEKIT_JWT_DOMAIN=localhost

# WebRTC Port Range for LiveKit
WEBRTC_PORT_START=50000
WEBRTC_PORT_END=60000
